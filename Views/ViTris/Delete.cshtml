@model QuanLyCotWeb.Models.ViTri


@{
    ViewData["Title"] = "Xác nhận xóa";
}

<h3 class="text-danger text-center mb-4">XÓA CỐT</h3>

<div class="alert alert-warning text-center">
    Bạn có chắc chắn muốn xóa Vị Trí Lầu <strong>@Model.Lau Dãy @Model.LoSo</strong> này không?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdviTri" />
    <div class="text-center">
        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-3">Hủy</a>
    </div>
</form>

