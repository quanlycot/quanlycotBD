@model string
@{
    ViewData["Title"] = "Tìm kiếm thông tin cốt";
    
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('/images/bg-cot.jpg'); /* Bạn có thể đổi ảnh nền */
            background-size: cover;
            background-position: center;
            color: white;
        }

        .search-box {
            max-width: 600px;
            margin: 20% auto;
            background: rgba(0, 0, 0, 0.5);
            padding: 30px;
            border-radius: 12px;
        }

        .form-control, .btn {
            height: 48px;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="text-white p-5 rounded" style="background: rgba(0,0,0,0.6); max-width: 600px; margin: auto; margin-top: 120px;">
        <h2 class="text-center mb-3">LƯU TRỮ TRO - CỐT</h2>
        <p class="text-center mb-4">Không gian lưu trữ tro cốt trang nghiêm phù hợp với mọi tôn giáo, tín ngưỡng</p>

        <form asp-action="KetQuaTimKiem" method="get">
            <div class="input-group">
                <input type="text" name="ten" class="form-control" placeholder="Nhập thông tin người thân..." />
                <button class="btn btn-warning" type="submit">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
            </div>
        </form>
    </div>

</body>
</html>
