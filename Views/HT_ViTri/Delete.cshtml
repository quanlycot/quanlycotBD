@model QuanLyCotWeb.Models.HT_ViTri

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<h3 class="text-danger text-center mb-4">XÓA VỊ TRÍ HÌNH THỜ</h3>

<div class="alert alert-warning text-center">
    Bạn có chắc chắn muốn xóa Vị Trí <strong>Tủ @Model.Tu - Dãy @Model.Day</strong> này không?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IDViTri" />
    <div class="text-center">
        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-3">Hủy</a>
    </div>
</form>
